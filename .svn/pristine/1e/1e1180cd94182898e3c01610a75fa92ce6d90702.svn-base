<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" >
<head>
	<meta charset="UTF-8" />
	<link rel="stylesheet" type="text/css" th:href="@{/css/cloud-admin.css}">

	<script th:src="@{/js/jquery/jquery-2.0.3.min.js}"></script>
	<script th:src="@{/js/echarts.min.js}"></script>
	<style>
		.chart1 {
			width: 100%;
			height: 400px;
			top: 10px;
			border: 0px;
		}
		.chart2 {
			width: 100%;
			height: 330px;
			top: 10px;
			border: 0px;
		}
	</style>
</head>
<body>
<div class="container">
	<div class="row">
		<div id="content" class="col-lg-12">
			<!-- PAGE HEADER-->
			<div class="row">
				<div class="col-sm-12">
					<div class="page-header">

						<!-- BREADCRUMBS -->
						<ul class="breadcrumb">
							<li>
								<!--<i class="fa-tachometer fa fa-fw"></i>-->
								<!--监控面板-->
							</li>
						</ul>
						<!-- /BREADCRUMBS -->
						<div class="clearfix">
							<h3 class="content-title pull-left">博约数据监控</h3>
						</div>
					</div>
				</div>
			</div>

			<!-- project info start -->
			<div class="row">
				<div class="col-md-4">
					<!-- BOX -->
					<div class="box border blue" style="height: 740px;">
						<div class="box-title">
							<h4><i class="fa fa-bars"></i>今日新闻入库统计</h4>
						</div>
						<div class="box-body big">
							<div class="row">
								<div id="chart1" class="chart1"></div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<div class="sparkline-row">
										<span class="title" style="margin-left: 30px; margin-top:20px;">新闻总数（条）</span>
										<span class="value" style="margin-left: 30px;" id="todayTotal">0</span>
									</div>
									<div class="sparkline-row">
										<span class="title" style="margin-left: 30px;">新闻入库数量（条）</span>
										<span class="value" style="margin-left: 30px;" id="todaySuccess">0</span>
									</div>
								</div>
								<div class="col-md-6">
									<div class="sparkline-row">
										<span class="title" style="margin-top:20px;">成功率</span>
										<span class="value" id="todaySuccessRatio">0%</span>
									</div>
									<div class="sparkline-row">
										<span class="title">入库失败数量（条）</span>
										<span class="value" id="todayFail">0</span>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- /BOX -->
				</div>
				<div class="col-md-8">
					<!-- BOX -->
					<div class="box border blue" style="height: 740px;">
						<div class="box-title">
							<h4><i class="fa fa-bars"></i>近七日新闻入库详情</h4>
						</div>
						<div id="chart2" class="chart2"></div>
						<div class="box-body big sparkline-stats">
							<table class="table table-striped table-bordered table-hover">
								<thead>
								<tr>
									<th>日期</th>
									<th>入库成功数（条）</th>
									<th>新闻总数（条）</th>
									<th>入库成功率</th>
								</tr>
								</thead>
								<tbody>
								<tr th:each="newsItem,iterStat:${newsItems}">
									<td th:text="${newsItem.newsDate}"></td>
									<td th:text="${newsItem.successNewsNum}"></td>
									<td th:text="${newsItem.totalNewsNum}"></td>
									<td th:text="${newsItem.successRatio+' %'}"></td>
								</tr>
								</tbody>
							</table>
						</div>
					</div>
					<!-- /BOX -->
				</div>

			</div>
			<!-- project info end -->
		</div>
	</div>
</div>
<!-- DATE RANGE PICKER -->
<script>
    // 初始化echarts实例
    var chart1 = echarts.init(document.getElementById("chart1"));

    option1 = {
        tooltip : {
            formatter: "{a} <br/>{b} : {c}%"
        },
        toolbox: {
            feature: {
                restore: {},
                saveAsImage: {}
            }
        },
        series: [
            {
                name: '业务指标',
                type: 'gauge',
                detail: {
                    fontSize: 17,
                    formatter: "{value}%"
                },
                data: [{value: 50, name: '入库率'}]
            }
        ]
    };

    // $(function () {
    setInterval(function() {
        $.ajax({
            url:"/stat/gauge",
            type:'get',
            dataType:'json',
            success:function(data){
                if(data.total != 0) {
                    $("#todayTotal").html(data.total);
                    $("#todaySuccessRatio").html(data.successRatio + "%");
                    $("#todaySuccess").html(data.success);
                    $("#todayFail").html(data.fail);

                    option1.series[0].data[0].value = data.successRatio;
                    chart1.setOption(option1, true);
                }
            }
        });
    }, 500);

    var chart2 = echarts.init(document.getElementById("chart2"));

    option2 = {
        // color: ['#3398DB'],
        tooltip : {
            trigger: 'axis',
            axisPointer : {            // 坐标轴指示器，坐标轴触发有效
                type : 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
            },
			formatter: function (params) {
				return params[0].name + "<br>"
					+ params[0].seriesName + ": " + params[0].data + "条" + "<br>"
                    + params[1].seriesName + ": " + params[1].data + "条" + "<br>"
                    + params[2].seriesName + ": " + params[2].data + "%" + "<br>"
            }
        },
        legend: {
            data:['入库成功数量','入库失败数量','入库成功百分比']
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '5%',
            containLabel: true
        },
        xAxis : [
            {
                type : 'category',
                // axisTick: {
                //     alignWithLabel: true
                // },
				axisLabel: {
					margin: 20
				},
                data : []
            }
        ],
        yAxis : [
            {
                type: 'value',
                name: '新闻数（单位：条）'
            },
            {
                type: 'value',
                name: '入库成功率',
                axisLabel: {
                    formatter: '{value} %'
                }
            }
        ],
        series : [
            {
                name:'入库成功数量',
                type:'bar',
				color:'#008B00',
                stack: '新闻',
                barWidth: '40%',
                label: {
                    normal: {
                        show: true,
                        position: 'insideTop',
						formatter: '{c}条'
                    }
                },
                data:[]
            },
            {
                name:'入库失败数量',
                type:'bar',
                color:'#C23531',
                stack: '新闻',
                barWidth: '40%',
                label: {
                    normal: {
                        show: true,
                        position: 'top',
                        formatter: '{c}条'
                    }
                },
                data:[]
            },
            {
                name:'入库成功百分比',
                type:'line',
                color:'#1E90FF',
                yAxisIndex: 1,
                // label: {
                //     normal: {
                //         show: true,
                //         position: 'top',
                //         formatter: '{c}%'
                //     }
                // },
                data:[]
            }
        ]
    };

    $(function () {
        $.ajax({
            url:"/stat/bar",
            type:'get',
            dataType:'json',
            success:function(data){
                if(data != null) {
                    option2.xAxis[0].data = data.dates;
                    option2.series[0].data = data.successNums;
                    option2.series[1].data = data.failNums;
                    option2.series[2].data = data.successRatio;
                    chart2.setOption(option2, true);
                }
            }
        });
    });

</script>
</body>
</html>